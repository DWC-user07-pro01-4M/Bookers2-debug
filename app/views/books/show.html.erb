<!--books/show-->
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'layouts/errors', obj: @book %>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
        </tr>
      </table>
       <table class='table'>
         <!--コメント表示-->
         コメント数：<%= @book.book_comments.count %>
         <% @book.book_comments.each do |book_comment| %>
           <tr>
             <!--いいね-->
             <td>
               <% if @book.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(@book), method: :delete do %>
                  ♥<%= @book.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorites_path(@book), method: :post do %>
                  ♡<%= @book.favorites.count %>
                <% end %>
              <% end %>
             </td>
             <td>
               <%= image_tag @book.user.get_profile_image, size:"100x100" %>
             </td>
             <td>
               <%= book_comment.comment %>
             </td>
             <td>
               <!--コメント削除-->
               <% if user_signed_in? && current_user.id == book_comment.user_id %>
                <%= link_to "Destroy", book_book_comment_path(@book, book_comment), method: :delete %>
               <% end %>
             </td>
           </tr>
         <% end %>
        </table>
           <!--コメント投稿-->
          <div>
            <%= form_with model:[@book, @book_comment] do |f| %>
              <%= f.text_area :comment, class: 'form-control book_comment' %><dr>
              <dr>
              <dr>
              <%= f.submit "送信" %>
            <% end %>
          </div>
    </div>
  </div>
</div>